<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <link rel="stylesheet" href="css/styles.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=RocknRoll+One&display=swap"
      rel="stylesheet"
    />
    <!-- Bootstrap CSS -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
      integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.2/css/all.min.css"
      integrity="sha512-1sCRPdkRXhBV2PBLUdRb4tMg1w2YPf37qatUFeS7zlBy7jJI8Lf4VHwWfZZfpXtYSLy85pkm9GaYVYMfw5BC1A=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <title>Ticket Booking WebApp</title>
  </head>
  <body>
    <!-- NavBar -->

    <nav class="navbar navbar-expand-md navbar-dark bg-dark">
      <a class="navbar-brand px-3" href="#">
        <i class="fa-solid fa-ticket"> TakeMyShow</i>
      </a>
      <form class="row" id="SearchBox">
        <div class="col-auto">
          <input
            type="text"
            class="form-control"
            id="Search"
            placeholder="Search for Movies,Play and More.."
          />
        </div>
        <button type="button" class="btn btn-danger" id="SearchButton">
          Search
        </button>
      </form>
      <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item dropdown">
            <a
              class="nav-link dropdown-toggle"
              href="#"
              id="navbarDropdown"
              role="button"
              data-toggle="dropdown"
              aria-haspopup="true"
              aria-expanded="false"
            >
              Patna
            </a>
            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
              <a class="dropdown-item" href="#">Benguluru</a>
              <a class="dropdown-item" href="#">Kolkata</a>
              <a class="dropdown-item" href="#">Chennai</a>
              <a class="dropdown-item" href="#">Mumbai</a>
              <div class="dropdown-divider"></div>
              <a class="dropdown-item" href="#">More Cities</a>
            </div>
          </li>
          <li class="nav-item">
            <button type="button" class="btn btn-warning" id="SearchButton">
              SignIn
            </button>
          </li>
          <li class="nav-item">
            <i class="fa-solid fa-grid-horizontal"></i>
          </li>
        </ul>
      </div>
    </nav>

    <!-- Carousel -->

    <div
      id="carouselExampleSlidesOnly"
      class="carousel slide"
      data-ride="carousel"
    >
      <div class="carousel-inner">
        <div class="carousel-item active">
          <img
            class="d-block w-100 imgitem"
            src="images/alien.jpg"
            alt="First slide"
          />
        </div>
        <div class="carousel-item">
          <img
            class="d-block w-100 imgitem"
            src="images/avatar.jpg"
            alt="Second slide"
          />
        </div>
        <div class="carousel-item">
          <img
            class="d-block w-100 imgitem"
            src="images/wick.jpg"
            alt="Third slide"
          />
        </div>
      </div>
      <a
        class="carousel-control-prev carouselbtn"
        href="#carouselExampleSlidesOnly"
        role="button"
        data-slide="prev"
      >
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a
        class="carousel-control-next"
        href="#carouselExampleSlidesOnly"
        role="button"
        data-slide="next"
      >
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>

    <!-- Movie Booking -->

    <section id="Booking">
      <h2>Recommended Movie</h2>
      <hr class="all">
      <div class="container-fluid">
        <div class="row" id="Bookingrow">
          <div class="col sm-4">
            <div class="card" style="width: 18rem">
              <img
                class="card-img-top"
                src="images/alien.jpg"
                alt="Card image cap"
              />
              <div class="card-body">
                <h4>Alien</h4>
                <span class="fa fa-star checked"></span>
                <span class="fa fa-star checked"></span>
                <span class="fa fa-star checked"></span>
                <span class="fa fa-star"></span>
                <span class="fa fa-star"></span>
                <hr class="all">
                <a href="/booking">
                <button type="button" class="btn btn-danger Alien">Book Now</button>
            </a>
              </div>
            </div>
          </div>
          <div class="col sm-3">
            <div class="card" style="width: 18rem">
              <img
                class="card-img-top"
                src="images/avatar.jpg"
                alt="Card image cap"
              />
              <div class="card-body">
                <h4>Avatar</h4>
                <span class="fa fa-star checked"></span>
                <span class="fa fa-star checked"></span>
                <span class="fa fa-star checked"></span>
                <span class="fa fa-star checked"></span>
                <span class="fa fa-star"></span>
                <hr class="all">
                <a href="/booking">
                <button type="button"  class="btn btn-danger Avatar">Book Now</button>
                </a>
              </div>
            </div>
          </div>
          <div class="col sm-3">
            <div class="card" style="width: 18rem">
              <img
                class="card-img-top"
                src="images/wick.jpg"
                alt="Card image cap"
              />
              <div class="card-body">
                <h4>John Wick 3</h4>
                <span class="fa fa-star checked"></span>
                <span class="fa fa-star checked"></span>
                <span class="fa fa-star checked"></span>
                <span class="fa fa-star checked"></span>
                <span class="fa fa-star"></span>
                <hr class="all">
                <a href="/booking"
                <button type="button"  class="btn btn-danger JohnWick3">Book Now</button>
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <hr class="last">

    <!-- Footer -->
    <div class="container-fluid">
      <footer id="footer">
        <i class="footer-logo1 fa-brands fa-twitter"></i>
        <i class="footer-logo1 fa-brands fa-facebook"></i>
        <i class="footer-logo1 fa-brands fa-instagram"></i>
        <i class="footer-logo1 fa-solid fa-envelope"></i>
        <p class="footer1">Â© Copyright TakeMyShow</p>
      </footer>
    </div>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script
      src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
      integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"
      integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"
      integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
